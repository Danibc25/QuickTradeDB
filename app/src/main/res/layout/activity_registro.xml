<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingTop="20dp"
        android:paddingRight="50dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registro"
                android:textAlignment="center"
                android:textColor="#4ab7ab"
                android:textSize="30dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/NomTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Nombre"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/NomEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Daniel"
                android:inputType="text"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/UsrNamTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Nombre usuario"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/UsrNamEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Daboca"
                android:inputType="text"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/ApellTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Apellido"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/ApellEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Borras"
                android:inputType="text"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/DirecTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Direccion"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/DirecEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Calle Falsa, 123"
                android:inputType="text"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/UsuTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Correo"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/UsuEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="daniel@correo.com"
                android:inputType="text"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/PassTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Contraseña"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/PassEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="**********"
                android:inputType="textPassword"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/Pass2Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Repetir Contraseña"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/Pass2Et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="**********"
                android:inputType="textPassword"
                android:textSize="15dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/CancelBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/SendBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Send" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>